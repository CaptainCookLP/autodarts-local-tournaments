{
  "manifest_version": 3,
  "name": "Autodarts Local Tournaments",
  "version": "0.1.0",
  "description": "Automates local X01 tournaments and scrapes live data from play.autodarts.io.",
  "permissions": ["storage", "scripting", "activeTab", "contextMenus", "tabs", "webNavigation"],
  "host_permissions": ["https://play.autodarts.io/*"],
  "background": { "service_worker": "service_worker.js" },
  "action": { "default_title": "Autodarts Toolkit", "default_popup": "popup.html" },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://play.autodarts.io/*"],
      "js": ["content/autoscrape.js", "content/x01.js", "content/lobby.js"],
      "run_at": "document_idle"
    }
  ]
}
